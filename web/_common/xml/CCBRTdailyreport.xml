<report type='timefilters' version='1.0'>
	<schedule type="daily"/>
	<result type="maintitle">
		<label>CCBRT DAILY ACTIVITIES REPORT</label>
	</result>
	<result type="subtitle">
		<label>OUTPATIENT CONSULTATIONS</label>
	</result>
	<result type='counter'>
		<label style='bold'>Total patients</label>
		<filter type='encounter' periodfilter='true' unique="patientuid">
			<select>
				<field name='encountertype'>
					<value type='constant' compare='equals'>visit</value>
				</field>
			</select>
		</filter>
	</result>
	<result type="subtitle">
		<label>STANDARD CLINIC OUTPATIENT CONSULTATIONS</label>
	</result>
	<result type='counter'>
		<label style="bold">Total patients</label>
